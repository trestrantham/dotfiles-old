[core]
  editor = vim
  excludesfile = ~/.gitignore

[user]
  name = Tres Trantham
  email = tres@trestrantham.com

[author]
  name = Tres Trantham
  email = tres@trestrantham.com

[help]
  autocorrect = 1

[color]
  ui = true

[alias]
  ctags = !.git/hooks/ctags
	start = !git init && git commit --allow-empty -m \"Initial commit\"

[github]
  user = trestrantham

[push]
  default = current

[web]
  broswer = open
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
